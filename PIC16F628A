#INCLUDE <P16F628A.INC>
CONFIG WDT OFF & INTOSC_OSC_NOCLKOUT
MAIN
BSE STATUS, 5      
MOVLW B'11111111'
MOVWF TRISA         
MOVWF B'00000000'
MOVWF TRISB      
BCE STATUS, 5     
MOVLW  B'00000111'
MOVWF CMCON 


INICIO
CLRF PORIB         
CALL TEMPO
MOVLW B'11111111'  
MOVWF PORTB 
CALL TEMPO
GOTC INICIO     


TEMPO
MOVLW OXFF         
MOVWF 0X21        
MOVWF 0X22         
LOOP

DECFSZ 0x21        
GOTC LOOP          
MOVWF 0X21         
DECFSZ 0X22
GOTC LOOP RETURN  
END





